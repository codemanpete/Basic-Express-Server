<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>EJS Engine</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                99 Cats
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td><b>Cat Name</b></td>
                        <td><b>Cat Age</b></td>
                        <td colspan="2"><b>Action</b></td>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < cats.length; ++i) { %>
                        <tr>
                            <td><%= cats[i].name %></td>
                            <td><%= cats[i].age %></td>
                            <td><a href="/cats/edit/<%= cats[i]._id %>" class="btn btn-primary">Edit</a></td>
                            <td><a href="/cats/delete/<%= cats[i]._id %>" class="btn btn-danger">Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>